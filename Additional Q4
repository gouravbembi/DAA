#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    int k;
    cin >> n >> k;

    vector<int> nums(n);
    for (int i = 0; i < n; i++) cin >> nums[i];

    vector<int> sorted = nums;
    sort(sorted.begin(), sorted.end());

    int Sum = 0;

    for (int i =0;i<sorted.size();i++) {
        
        int Count = sorted.end() - upper_bound(sorted.begin(), sorted.end(), sorted[i] );

        if (Count >= k) {
            Sum += sorted[i];   
        }
    }

    cout << Sum << "\n";
    return 0;
}
