#include <bits/stdc++.h>
using namespace std;

 
int crossSum(vector<int>& a, int l, int mid, int r) {
    int leftSum = INT_MIN, sum = 0;

    
    for (int i = mid; i >= l; i--) {
        sum += a[i];
        leftSum = max(leftSum, sum);
    }

    int rightSum = INT_MIN;
    sum = 0;
 
    for (int i = mid + 1; i <= r; i++) {
        sum += a[i];
        rightSum = max(rightSum, sum);
    }

    return leftSum + rightSum;
}

int maxSubarrayDC(vector<int>& a, int l, int r) {
 
    if (l == r) return a[l];

    int mid = l + (r - l) / 2;

    int leftMax = maxSubarrayDC(a, l, mid);
    int rightMax = maxSubarrayDC(a, mid + 1, r);
    int crossMax = crossSum(a, l, mid, r);

    return max({leftMax, rightMax, crossMax});
}

int main() {
    vector<int> arr = {-2, -5, 6, -2, -3, 1, 5, -6};

    cout << "Maximum Subarray Sum: " 
         << maxSubarrayDC(arr, 0, arr.size() - 1);

    return 0;
}
